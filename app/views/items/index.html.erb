<div class=m-3>
  <div class="d-flex">
    <div class="card-deck">
      <% @items.each do |item| %>
      <div class="card">
        <div class="position-relative">
          <%= link_to item_path(item) do %>
          <img class="card-img-top" src="https://source.unsplash.com/800x600/?stroller, <%= (0..200).to_a.sample %>" alt="Card image cap">
          <% end %>
          <div class="card-text price price-text-medium"><%= item.price_in_cents / 100 %> €<br>/ jour</div>
        </div>
        <div class="card-body">
          <span class="badge badge-secondary mb-2"><%= item.category %></span>
          <%= link_to item_path(item) do %>
          <h2 class="card-title"><%= item.title %></h2>
          <% end %>
          <%= item.price_in_cents / 100 %> € /jour
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= link_to item_path(item), class:'btn btn-reservation' do %>
          Réserver
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
