<div class="card-deck">
  <% @items.each do |item| %>
  <div class="card">
    <img class="card-img-top" src="https://www.bebe9.com/media/W1siZiIsIjIwMTkvMDQvMTgvNG1jYThxbXh2cV8zNjYxOTc5MDY2MjA1Nl8yXy5qcGciXSxbInAiLCJjb252ZXJ0IiwiLXJlc2l6ZSA0MzV4NDM1IC1iYWNrZ3JvdW5kIHdoaXRlIC1ncmF2aXR5IGNlbnRlciAtZXh0ZW50IDQzNXg0MzUiXV0/36619790662056%20%282%29.jpg?sha=4f7733595c5016e3" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title"><%= item.title %></h4>
      <h5 class="card-title"><%= item.category %></h5>
      <p class="card-text"><%= item.description %></p>
      <p class="card-text">Prix: <%= item.price_in_cents / 100 %> € </p>
    </div>
    <div class="card-footer">
      <small class="text-muted"><%= link_to "Fiche détaillée de l'objet", item_path(item) %></small>
    </div>
  </div>
  <% end %>
</div>
