<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-sm">
  <a class="navbar-brand" href="/">
    <%= image_tag "logo_roulebibi_tall_png.png", class:"img-logo" %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Devenir Loueur", new_item_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :scale, class:'rounded-circle avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
                  <%= image_tag('profil-image.svg', height:'40', width:'40', class:'rounded-circle avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mon compte", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Mes Réservations", item_bookings_path(current_user), class: "dropdown-item" %>
              <%= link_to "Mettre un objet en location", new_item_path, class: "dropdown-item border-top" %>
              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item border-top" %>
            </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Louer un objet", new_item_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-primary" %>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>
